/*
  Rock Paper Scissors Lizard Spock
  Based off the game modification from The Big Bang Theory
*/
#include <iostream>
#include <stdlib.h>

int main() {

  srand(time(NULL));
  int pc = rand() % 5 + 1;
  int user = 0;

  std::cout << "Rock Paper Scissors Lizard Spock! \n";
  std::cout << "1) Rock âœŠ\n";
